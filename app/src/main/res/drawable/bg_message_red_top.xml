<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CABBBBBB"/>
            <corners android:topLeftRadius="@dimen/dimen_2x"/>
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="@dimen/dimen_2px"
        android:top="0dp"
        android:bottom="@dimen/dimen_2px">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:endColor="@color/endColorBgMessage"
                android:centerColor="@color/centerColorBgMessage"
                android:startColor="@color/starColorBgMessage"
                android:type="linear" />
            <corners android:topLeftRadius="@dimen/dimen_2x"/>
        </shape>
    </item>
</layer-list>