<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_2x">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/img_step1"
            android:src="@drawable/ic_steps"
            android:layout_width="@dimen/dimen_2x"
            android:layout_height="@dimen/dimen_2x" />

        <ImageView
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:id="@+id/img_line12"
            android:src="@drawable/ic_line_steps"
            android:layout_width="@dimen/dimen_9x"
            android:layout_height="@dimen/dimen_2x" />

        <ImageView
            android:id="@+id/img_step2"
            android:src="@drawable/ic_circle_left_right"
            android:layout_width="@dimen/dimen_2x"
            android:layout_height="@dimen/dimen_2x" />

        <ImageView
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:id="@+id/img_line23"
            android:src="@drawable/ic_line_steps"
            android:layout_width="@dimen/dimen_9x"
            android:layout_height="@dimen/dimen_2x" />
        <ImageView
            android:id="@+id/img_step3"
            android:src="@drawable/ic_circle_left"
            android:layout_width="@dimen/dimen_2x"
            android:layout_height="@dimen/dimen_2x" />
    </LinearLayout>
</LinearLayout>