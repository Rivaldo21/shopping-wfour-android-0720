<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lbl_completed" />

    <RelativeLayout android:id="@+id/lbl_completed"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_btn_gadient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <com.wfour.onlinestoreapp.widgets.textview.TextViewBold
            android:id="@+id/tv_btn"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textSize="@dimen/text_size_large"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:padding="@dimen/dimen_2x"
            android:layout_height="wrap_content"
            android:text="@string/deal_completed" />

        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/ic_creidits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>