<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/ll_menu_left"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#f9f9f9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_header">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_menu">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/nav_header">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentBottom="true">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_avatar"
                            android:layout_width="@dimen/dimen_12x"
                            android:layout_height="@dimen/dimen_12x"
                            android:background="@drawable/ic_cam"
                            android:backgroundTint="@color/grey" />

                        <com.wfour.onlinestoreapp.widgets.textview.TextViewBold
                            android:id="@+id/lbl_deal_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_avatar"
                            android:layout_marginTop="@dimen/dimen_1x"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_large"
                            android:layout_gravity="center_horizontal" />

                        <com.wfour.onlinestoreapp.widgets.textview.TextViewBold
                            android:id="@+id/lbl_deal_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lbl_deal_name"
                            android:layout_marginTop="@dimen/dimen_1x"
                            android:textColor="@color/red"
                            android:textSize="@dimen/text_size_large"
                            android:layout_gravity="center_horizontal" />

                        <!--<com.suusoft.cosmetic.widgets.textview.TextViewBold-->
                        <!--android:layout_below="@+id/lbl_deal_name"-->
                        <!--android:layout_centerHorizontal="true"-->
                        <!--android:layout_marginTop="@dimen/dimen_1x"-->
                        <!--android:id="@+id/tv_email"-->
                        <!--android:textSize="@dimen/text_size_normal"-->
                        <!--android:textColor="@color/white"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content" />-->
                    </LinearLayout>
                </RelativeLayout>
            </FrameLayout>


        </RelativeLayout>

        <View
            android:layout_marginBottom="@dimen/dimen_1x"
            android:layout_marginLeft="@dimen/dimen_3x"
            android:layout_marginRight="@dimen/dimen_3x"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lv_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</ScrollView>