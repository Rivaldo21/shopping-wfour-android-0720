<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dimen_1x">

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/dimen_18x"
        android:layout_height="@dimen/dimen_18x"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_item_orther"
        android:layout_margin="@dimen/dimen_1x" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_1x"
            android:layout_marginTop="@dimen/dimen_1x"
            android:text="Tên sản phẩm"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_large"
            android:minLines="2"
            android:maxLines="2"
            android:ellipsize="end"/>


        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="@dimen/dimen_1x"-->
            <!--android:layout_marginTop="@dimen/dimen_05x"-->
            <!--android:text="Mô tả sản phẩm"-->
            <!--android:textSize="@dimen/text_size_xnormal"-->
            <!--android:textColor="@color/black1" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/lnlColor"
            android:layout_marginTop="@dimen/dimen_1x">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color2"
                android:layout_marginLeft="@dimen/dimen_1x"
                android:layout_marginTop="@dimen/dimen_05x"
                android:textColor="@color/textColorBlackPrimary"
                android:textSize="@dimen/text_size_normal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_1x"
                android:layout_marginTop="@dimen/dimen_05x"
                android:text="Color"
                android:textColor="@color/textColorBlackPrimary"
                android:textSize="@dimen/text_size_normal"
                android:id="@+id/tvColor"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/lnlSize">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size:"
                android:layout_marginLeft="@dimen/dimen_1x"
                android:layout_marginTop="@dimen/dimen_05x"
                android:textColor="@color/textColorBlackPrimary"
                android:textSize="@dimen/text_size_normal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_1x"
                android:layout_marginTop="@dimen/dimen_05x"
                android:text="size"
                android:textColor="@color/textColorBlackPrimary"
                android:textSize="@dimen/text_size_normal"
                android:id="@+id/tvSize"
                />
        </LinearLayout>
        <com.wfour.onlinestoreapp.widgets.textview.TextViewLightItalic
            android:layout_marginLeft="@dimen/dimen_1x"
            android:layout_marginTop="@dimen/dimen_2x"
            android:id="@+id/lbl_price_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABC"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dimen_1x"
            >
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="30.000 đ"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_xnormal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/text_size_xnormal"/>
            <TextView
                android:id="@+id/tvNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="@dimen/text_size_xnormal"
                android:layout_marginLeft="2dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>