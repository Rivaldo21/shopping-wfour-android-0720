<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_1x"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_margin="@dimen/dimen_1x"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_item_orther" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_1x"
            android:layout_marginTop="@dimen/dimen_1x"
            android:ellipsize="end"
            android:fontFamily="@font/inter_medium"
            android:maxLines="2"
            android:minLines="2"
            android:text="Tên sản phẩm"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_small" />


        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="@dimen/dimen_1x"-->
        <!--android:layout_marginTop="@dimen/dimen_05x"-->
        <!--android:text="Mô tả sản phẩm"-->
        <!--android:textSize="@dimen/text_size_xnormal"-->
        <!--android:textColor="@color/black1" />-->

        <LinearLayout
            android:id="@+id/lnlColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_1x"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_1x"
                android:layout_marginTop="@dimen/dimen_05x"
                android:text="@string/color2"
                android:textColor="@color/textColorBlackPrimary"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tvColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_1x"
                android:layout_marginTop="@dimen/dimen_05x"
                android:text="Color"
                android:textColor="@color/textColorBlackPrimary"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnlSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_1x"
                android:layout_marginTop="@dimen/dimen_05x"
                android:text="Size:"
                android:textColor="@color/textColorBlackPrimary"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tvSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_1x"
                android:layout_marginTop="@dimen/dimen_05x"
                android:text="size"
                android:textColor="@color/textColorBlackPrimary"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <com.wfour.onlinestoreapp.widgets.textview.TextViewLightItalic
            android:id="@+id/lbl_price_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_1x"
            android:layout_marginTop="@dimen/dimen_2x"
            android:text="ABC"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_1x"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 30.000 "
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="x"
                android:textSize="@dimen/text_size_xnormal"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="2"
                android:textSize="@dimen/text_size_xnormal"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_1x"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status :"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/inter_regular"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="Prosesu"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/inter_regular" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>