<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.UpdateAddressFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/toolbar"></include>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/search_style_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_2x"
            android:layout_marginTop="@dimen/dimen_2x"
            android:theme="@style/search_style_edittext">

            <EditText
                android:id="@+id/edtName"
                style="@style/search_style_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_2x"
                android:hint="Naran"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="100"
                android:maxLines="1"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/text_size_normal" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/search_style_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_2x"
            android:layout_marginTop="@dimen/dimen_2x"
            android:theme="@style/search_style_edittext">

            <EditText
                android:id="@+id/edtPhone"
                style="@style/search_style_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_2x"
                android:hint="Numeru telemovel"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="100"
                android:maxLines="1"
                android:textColor="@color/textColorPrimary"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Munisipiu"
            style="@style/search_style_edittext"
            android:textColor="@color/primary"
            android:textSize="14sp"
            android:layout_marginLeft="15dp"/>
        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spn_cate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_2x"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/dimen_2x"
            android:layout_marginLeft="@dimen/dimen_2x"
            android:background="@color/dividerColor" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nasaun"
            style="@style/search_style_edittext"
            android:textColor="@color/primary"
            android:textSize="14sp"
            android:layout_marginLeft="15dp"/>
        <androidx.appcompat.widget.AppCompatSpinner

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_2x"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/dimen_2x"
            android:layout_marginLeft="@dimen/dimen_2x"
            android:background="@color/dividerColor" />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/search_style_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_2x"
            android:layout_marginTop="@dimen/dimen_2x"
            android:theme="@style/search_style_edittext">

            <EditText
                android:id="@+id/edtAddress"
                style="@style/search_style_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_2x"
                android:hint="Enderesu"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="100"
                android:maxLines="1"
                android:textColor="@color/textColorPrimary"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/chk_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_1x"
            android:checked="false"
            android:text="Default enderesu"
            android:textSize="@dimen/text_size_normal"
            app:buttonTint="@color/primary"
            app:paddingEnd="0dp"
            app:paddingStart="0dp" />
        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_1x"
            android:checked="false"
            android:text="Enderesu kompania"
            android:textSize="@dimen/text_size_normal"
            app:buttonTint="@color/primary"
            app:paddingEnd="0dp"
            app:paddingStart="0dp" />
    </LinearLayout>
    <com.wfour.onlinestoreapp.widgets.textview.TextViewBold
        android:id="@+id/btnUpdateAddress"
        style="@style/Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_4x"
        android:layout_marginLeft="@dimen/dimen_5x"
        android:layout_marginRight="@dimen/dimen_5x"
        android:layout_marginTop="@dimen/dimen_4x"
        android:text="Update Enderesu"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>