<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:background="#fde4e2"
        android:gravity="center_vertical"
        android:id="@+id/ll_item_menu"
        android:paddingTop="@dimen/dimen_2x"
        android:paddingBottom="@dimen/dimen_2x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="@dimen/dimen_3x"
            android:src="@drawable/ic_cam"
            android:id="@+id/img_icon"
            android:layout_width="@dimen/dimen_5x"
            android:layout_height="match_parent" />

        <TextView
            android:text="Home"
            android:id="@+id/tv_item_menu"
            android:textSize="@dimen/text_size_large"
            android:paddingLeft="@dimen/dimen_2x"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_marginLeft="@dimen/dimen_3x"
        android:layout_marginRight="@dimen/dimen_3x"
        android:visibility="visible"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dimen_1x"
        android:layout_marginBottom="@dimen/dimen_1x"
        android:id="@+id/devider_function_main"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

</LinearLayout>