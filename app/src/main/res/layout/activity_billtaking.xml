        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dimen_3x"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="@dimen/dimen_1x"
            android:padding="@dimen/dimen_1x"
            android:layout_marginRight="@dimen/dimen_1x"
            app:cardCornerRadius="@dimen/dimen_05x"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_1x"
                    android:layout_marginTop="@dimen/dimen_1x"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="@dimen/dimen_1x"
                        android:background="@drawable/bg_cycle_accent"></LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_1x"
                        android:fontFamily="@font/inter_regular"
                        android:text="Code Bill : "
                        android:textSize="@dimen/text_size_normal" />

                    <TextView
                        android:id="@+id/tvBillCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_1x"
                        android:fontFamily="@font/inter_bold"
                        android:text=""
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_1x"
                    android:layout_marginTop="@dimen/dimen_1x"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="@dimen/dimen_1x"
                        android:background="@drawable/bg_cycle_accent"></LinearLayout>

                    <TextView
                        android:id="@+id/tvDelivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_1x"
                        android:fontFamily="@font/inter_regular"
                        android:text="(Free shipping for orders from $10)"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_1x"
                    android:layout_marginTop="@dimen/dimen_1x"
                    android:layout_marginBottom="@dimen/dimen_1x"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="@dimen/dimen_1x"
                        android:background="@drawable/bg_cycle_accent"></LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_1x"
                        android:fontFamily="@font/inter_regular"
                        android:text="@string/confirm_email"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

