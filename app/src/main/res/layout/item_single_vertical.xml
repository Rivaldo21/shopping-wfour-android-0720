<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/min_height_image"
    android:orientation="vertical"
    android:padding="@dimen/dimen_05x">

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dimen_1x">

            <ImageView
                android:id="@+id/add_fev_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add_fev_icon"
                android:layout_alignParentRight="true"
                />
            <ImageView
                android:layout_below="@+id/add_fev_imageview"
                android:id="@+id/img_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/rlt_content"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:id="@+id/rlt_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dimen_05x">

                <com.wfour.onlinestoreapp.widgets.textview.TextViewRegular
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:text="Ronaldo Ronaldo"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_xnormal"
                    android:visibility="visible"

                    android:maxLines="2"
                    android:ellipsize="end"/>


               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <com.wfour.onlinestoreapp.widgets.textview.TextViewBold
                       android:id="@+id/lbl_price"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:ellipsize="end"
                       android:marqueeRepeatLimit="marquee_forever"
                       android:singleLine="true"
                       android:text="$10"

                       android:textColor="@color/text_color_price"
                       android:textSize="@dimen/text_size_xnormal"
                       android:textStyle="bold" />

                   <com.wfour.onlinestoreapp.widgets.textview.TextViewLightItalic
                       android:id="@+id/lbl_price_old"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="ABC"
                       android:textSize="@dimen/text_size_small"
                       android:layout_marginLeft="10dp"
                       />

               </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>